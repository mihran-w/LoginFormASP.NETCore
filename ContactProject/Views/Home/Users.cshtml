@model List<ContactProject.Models.Login>

@section styles{
    <link rel="stylesheet" type="text/css" href="/css/bootstrap.rtl.min.css">
}

@{

    var isSuccess = TempData["isSuccess"];

    ViewData["Title"] = "لیست کاربران";
}

<div class="row justify-content-center">

    @if (isSuccess != null)
    {
        <div class="alert alert-success m-5">
            @foreach (var item in Model)
            {
                <h1>خوش آمدی <span>@item.UserName</span> جان !</h1>
            }
        </div>
    }
    else
    {
        <div class="alert alert-danger m-5">
            <h1>نشناختیم شما؟</h1>
        </div>
    }

    <h1 class="fw-bold text-center mb-5 mt-5">لیست کاربران </h1>

    @await Component.InvokeAsync("Table")

    <br />
    <br />
    <br />

    <vc:table></vc:table>

</div>

